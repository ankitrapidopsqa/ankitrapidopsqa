    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch Chrome against localhost, with sourcemaps",
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080//affiliate.flipkart.com/login",
            "sourceMaps": true,
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Attach to Chrome, with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        }
    ]
}