// Test 14

function addition(value1, value2){
    var add=value1+value2;
    console.log(add);
}
addition(100,45);

function subtraction(value3, value4){
    var sub=value3-value4;
    console.log(sub);
}
subtraction(100,45);

function multiplication(value5, value6){
    var mul=value5*value6;
    console.log(mul);
}
multiplication(100,45);

function division(value7, value8){
    var div=value7/value8;
    console.log(div);
}
division(100,45);

console.log("-----------------------");

// Test 15
function square(value9){
    var sqr = value9 * value9;
    console.log("Square of value is : "+sqr);
}
square(1);
square(2);
square(3);
square(4);
square(5);
square(6);
square(7);
square(8);
square(9);
square(10);
console.log("-----------------------");

// Test 16
function cube(value10){
    var cb = value10 * value10 * value10;
    console.log("Cube of value is : "+cb);
}
cube(1);
cube(2);
cube(3);
cube(4);
cube(5);
cube(6);
cube(7);
cube(8);
cube(9);
cube(10);
console.log("-----------------------");

//Test 17

function _formula1(e, f, g){
    var _f1 = (e*f*g) / 100;
    console.log("Simple intrest : "+_f1);
}
_formula1(12,3,9);

