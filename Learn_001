    console.log("Hi, I am learning java script");
}

// Calling function
display();
console.log("------------------------");
// Test 2

function school(name){
    console.log(name);
}

school(120);
school(true);
school("My School");
console.log("------------------------");
// Test 3

function schoolDetail(name, city){
    console.log(name);
    console.log(city);
}

schoolDetail("Jyoti Vidhya Mandir", "Ahmedabad");
console.log("------------------------");
// Test 4
function india (state, city, students){
    console.log("Our state is" + state + ".\n" +
                "Out city is" + city + ".\n" +
                "We are total" + students + "students who have applied for the Java Script examination.");
}

india("Gujarat", "Ahmedabad", "15");
india("Gujarat", "Rajkot", "5");
india("UP", "Allahabad", "25");
india("Madhya Pradesh", "Indore", "45");

console.log("------------------------");


// Test5 - Function, argument missing

function add(a,b,c){
    console.log("A:"+a+"B:"+b+"C:"+c);
}

add(10,20);
console.log("------------------------");

// Test 6 - Argument Object

function disp(name1, name2){
    console.log(arguments.length);
}
disp ("Hello", "World");
console.log("-----------------------");
// Test 7
function disp2(){
    console.log(arguments[0]);
    console.log(arguments[1]);
    console.log(arguments[2]);
}
disp2("Hello", "I am", "Ankit");

console.log("-----------------------");
//Test 8

function disp3(){
    for(var i=0; i<arguments.length; i++){
        console.log(arguments[i]);
    }
}
disp3 ("Hello", "World", "I am", "Leaving", "in", "Mehsana");
console.log("-----------------------");


//Test 9 - Too many function arguments

function add2(a,b){
    console.log("A:" +a + "B:" +b + "C:" + arguments[2]);
}
add2(10, 20, 30);
console.log("-----------------------");
// Test 10

function test(p, q, r=80){
    console.log("P :" +p);
    console.log("Q :" +q);
    console.log("R :" +r);
}
test(12.5, 67);

console.log("-----------------------");

