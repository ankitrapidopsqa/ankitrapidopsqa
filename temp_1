<script>
//Unary Operator
var a =10;
console.log(a); //10
console.log(a++);//10
console.log(a);//11
console.log(++a);//12
console.log(a--);//12
console.log(a);//11
console.log(--a); //10


//Shift Operator

var b = 8; // binary number 1000
console.log(a<<1);  // << shift 10000 - 16 eg. a*2^n 
console.log(a>>1); // >> shift 100

//Relational Operator

var c = 8;
var name = "8";
console.log(c==name); //8==8 // true, it will check values
console.log(c === name); //8 == 8 & number! = string //false, it will check values & data type

// Bitwise operators
var d = 8; (binary = 1000)
var e = 2; (binary = 0010)

console.log(d & e); //AND Operator
console.log(d | e);    // OR Operator
console.log (d ^ e); // xor Operator
console.log (~d);  // NOT Operator


// Logical operators
var aa = true, bb = false;
console.log(a && b); //check whether both are same, answer : false
console.log(a || b); //check whether both are not same, answer : true
console.log(!a); //check whether both are same, answer : false

// Assignment & Ternary operators
var cc=2;
console.log('cc=2 : ' + (cc=2));
console.log ((cc==2)? console.log("Yes"):console.log("No"));

//Conditional Statements - If Else
var dd = 5, 
var ee=10;

if (dd+ee=15){
    console.log("Right);
}
Else{
    console.log("Left");
}

//Switch Case
var day = "Sunday";
switch(day){
    case "Monday": console.log("Today is monday");
    break;

    case "Tuesday": console.log("Today is tuesday");
    break;

    case "Wednesday": console.log("Today is wednesday");
    break;

    case "Thursday": console.log("Today is thursday");
    break;
    
    case "Friday": console.log("Today is friday");
    break;

    case "Saturday": console.log("Today is saturday");
    break;

    default: console.log("Today is Sunday");

}

//Loops For

for (var n=1; n<11; n++){
    console.log(n);
}

// While

var n1 = 1;
while (n1<11)
{
    console.log(n1);
    n1++;
}

// Do.. While
var n2 = 1;
do{
    console.log(n2);
    n2++;
}
while(n2 < 20);


//Array
//Push
var arr = [1,2];
arr.push(3);
console.log("Value of ARR is: " +arr);

//Pop

var brr = new Array(aa,bb,cc);
brr.pop();
console.log("Value of BRR is:" +brr);

//Unshift & Shift
let crr = [1,2];
crr.unshift(3);
console.log("Value of CRR is:" +crr);

//Shift
crr.shift();
console.log("Value of CRR is:" +crr);

// Splice
let p = [1,2,3,4,5];
p.splice (1,3,"hello"); // Add
console.log("Value of P is:" +p); // answer will be 1, "hello", 5

let q = [1,2,3,4,5];
q.splice (1,3); // Remove
console.log("Value of P is:" +p); // answer will be 1,5

// Slice : Need to learn again

// Printing : Need to learn again
// for each
// For in
// for of




</script>
